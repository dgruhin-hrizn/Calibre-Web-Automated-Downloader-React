# Local Development Environment Variables Template
# Copy this file to 'dev.env' and customize for your local development setup
# This file is for local hybrid development only and won't affect Unraid deployment

# Flask Configuration
FLASK_PORT=8084
FLASK_HOST=0.0.0.0
DEBUG=true
APP_ENV=development
LOG_LEVEL=DEBUG

# CWA Connection Settings (for local hybrid development)
# These should match your local CWA container
CWA_BASE_URL=http://localhost:8083
CWA_USERNAME=admin
CWA_PASSWORD=admin123

# Database Paths (container paths - don't change these)
CWA_DB_PATH=/config/cwa.db
CALIBRE_LIBRARY_PATH=/calibre-library

# Development Settings
ENABLE_LOGGING=true
USE_BOOK_TITLE=true
MAX_CONCURRENT_DOWNLOADS=3

# Anna's Archive Settings (optional - add your key if you have one)
# AA_DONATOR_KEY=your-donator-key-here

# Cloudflare Bypass
USE_CF_BYPASS=true

# DNS Settings
CUSTOM_DNS=cloudflare

# Timezone
TZ=America/New_York

# Authentication (set to false for proper auth testing in development)
DISABLE_AUTH=false
